---
import "@fontsource-variable/outfit";
---

<style is:global>
  :root {
    /* Colors */
    --purple: #7209b7;
    --purple-dark: #5d0385;
    --gold: #ffb74d;
    --dark: #333745;
    --dark-soft: #424555;
    --white: #e0e1dd;
    --white-soft: #f4f4f9;
    --success: #4caf50;
    --warning: #ffb74d;
    --error: #ff5f56;

    /* Font */
    --font-family: "Outfit Variable", sans-serif;

    /* Font Sizes */
    --body-s: 0.875rem;
    --body: 1rem;
    --body-l: 1.125rem;
    --body-xl: 1.25rem;
    --h1: 4rem;
    --h2: 3rem;
    --h3: 2rem;
    --h4: 1.5rem;
    --h5: 1.25rem;
    --h6: 1rem;
    --display-m: 5.25rem;
    --display-xl: 8.75rem;
    --display-xxl: 14.1875rem;
  }

  * {
    min-width: 0;
    font: inherit;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  img,
  video,
  svg {
    display: block;
    height: auto;
    max-width: 100%;
  }

  body {
    margin: 0;
    min-height: 100dvh;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    text-wrap: balance;
    margin: 0;
    font-size: inherit;
  }

  p {
    text-wrap: pretty;
  }
</style>

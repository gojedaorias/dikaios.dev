---
import styles from "./Heading.module.css";

interface Props {
  level?: 1 | 2 | 3 | 4 | 5 | 6 | "M" | "XL" | "XXL";
  className?: string;
  children: string;
}

const { level = 1, className = "", children }: Props = Astro.props;
const Tag = `h${level}` as keyof HTMLElementTagNameMap; // Genera el tag din√°mico basado en el nivel del heading
---

<Tag class={`${styles.heading} ${styles[`h${level}`]} ${className}`}>
  {children}
</Tag>
